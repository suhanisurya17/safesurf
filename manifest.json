{
  "manifest_version": 3,
  "name": "Scam Shield",
  "version": "1.0.0",
  "description": "Protecting you online - Detect scam emails and potential scam websites",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/shield-16.png",
      "48": "icons/shield-48.png",
      "128": "icons/shield-128.png"
    }
  },
  "icons": {
    "16": "icons/shield-16.png",
    "48": "icons/shield-48.png",
    "128": "icons/shield-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "ai-service.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

